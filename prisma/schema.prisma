datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  role           String
  password       String
  phoneNumber    String   @unique
  specialization String?
  experience     Int?
  license        String?
  verified       Boolean  @default(false)
  offlinePrice   Int?
  onlinePrice    Int?
  createdAt      DateTime @default(now())
}
